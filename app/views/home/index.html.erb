<% if @current_user %>
  <%= render :partial => "form" %>
<% end %>

<!-- h2>Wat zijn we allemaal beu?</h2 -->
<div id="beu_lijstje" name="beu_lijstje">
<%= render :partial => "list" %>
</div>


<% interval = 60 %>
<br><small># checks for updates every <%= interval %> seconds</small>
<%= periodically_call_remote(:url => { :action => "list" }, :frequency => interval, :update => 'beu_lijstje', :loaded => visual_effect(:highlight, "beu_lijstje", :duration => 0.2)
) %>
  